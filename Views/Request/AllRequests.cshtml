@model IEnumerable<UsersRequestsRouming.Models.Request>  

<p class="error">@ViewBag.ErrorMessage</p>
<table>
    <tr>
        <th>
            @Html.ActionLink("ID", "AllRequests", new { sortOrder = ViewBag.id_desc })
        </th>
        
        <th>
            @Html.ActionLink("Страна", "AllRequests", new { sortOrder = ViewBag.country_desc })
        </th>

        <th>
            @Html.ActionLink("Город", "AllRequests", new { sortOrder = ViewBag.city_desc })
        </th>

        <th>
            @Html.ActionLink("Регион", "AllRequests", new { sortOrder = ViewBag.region_desc })
        </th>

        <th>
            @Html.ActionLink("Телефон", "AllRequests", new { sortOrder = ViewBag.phone_desc })
        </th>

        <th>
            @Html.ActionLink("Причина", "AllRequests", new { sortOrder = ViewBag.reason_desc })
        </th>

        <th>
            @Html.ActionLink("Направление", "AllRequests", new { sortOrder = ViewBag.direction_desc })
        </th>

        <th>
            @Html.ActionLink("Дата", "AllRequests", new { sortOrder = ViewBag.datetime_desc })
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestReason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestDateTime)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Update", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}